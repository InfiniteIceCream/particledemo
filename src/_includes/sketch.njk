{% extends "base.njk" %}

{% block head %}
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
    body {
      padding: 100;
      margin: 100;
    }
  </style>
  <script src="https://cdn.jsdelivr.net/npm/p5@2.1.1/lib/p5.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.5.0/build/styles/default.min.css">
<script src="https://cdn.jsdelivr.net/gh/highlightjs/cdn-release@11.5.0/build/highlight.min.js"></script>
  <script>hljs.highlightAll();</script>

{% block sketch %}
  <script>
  function setup() {
    var myCanvas = createCanvas(400, 400);
    myCanvas.parent("sketch-holder");
  }

  function draw() {
    if (mouseIsPressed) {
      fill(0);
    } else {
      fill(255);
    }
    ellipse(mouseX, mouseY, 80, 80);
  }
  </script>
    {% endblock sketch %}
{% endblock head%}

